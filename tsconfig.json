{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@libs/ts-koa": [
        "@libs/ts-koa/src/index.ts"
      ],
      "@libs/ts-orm": [
        "@libs/ts-orm/src/index.ts"
      ],
      "@libs/ts-ws": [
        "@libs/ts-ws/src/index.ts"
      ],
      "@libs/game-lib": [
        "@libs/game-lib/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
